{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build:widget && npm run copy:widget-to-public && nuxt build",
    "build:widget": "vite build --config widget/vite.config.ts",
    "copy:widget-to-public": "mkdir -p public/widget && cp dist/widget/jeremy-chat-widget.iife.js public/widget/ && cp dist/widget/nuxt-app.css public/widget/",
    "copy:widget-to-output": "mkdir -p .output/public/widget && cp dist/widget/jeremy-chat-widget.iife.js .output/public/widget/ && cp dist/widget/nuxt-app.css .output/public/widget/",
    "dev": "nuxt dev",
    "dev:widget": "vite build --watch --config widget/vite.config.ts",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "gsap": "^3.13.0",
    "nuxt": "^3.13.0",
    "vue": "latest",
    "vue-router": "latest"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@vitejs/plugin-vue": "^6.0.0",
    "terser": "^5.26.0",
    "vite": "^6.0.0"
  }
}
